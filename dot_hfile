#ifndef USEFUL_FUNCTION_CHEST_H_INCLUDED
#define USEFUL_FUNCTION_CHEST_H_INCLUDED

void ordenar(int arr[], int n){
    for (int i = 1; i < n; ++i) {
        int key = arr[i];
        int j = i - 1;
        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j];
            j = j - 1;
        }
        arr[j + 1] = key;
    }
}

int searching(int arr[], string x){
    int low = 0;
    int high = arr.size() - 1;
    while (low <= high) {
        int mid = low + (high - low) / 2;
        if (arr[mid] == x)
            return mid;
        if (arr[mid] < x)
            low = mid + 1;
        else
            high = mid - 1;
    }
    return -1;
}

#endif // USEFUL_FUNCTION_CHEST_H_INCLUDED
